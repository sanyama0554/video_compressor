{
  "name": "video-compressor",
  "version": "1.0.0",
  "description": "Electron video compression app for GitHub PR attachments",
  "main": "packages/main/dist/index.js",
  "author": "Video Compressor Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\"",
    "dev:main": "cd packages/main && npm run dev",
    "dev:preload": "cd packages/preload && npm run dev",
    "dev:renderer": "cd packages/renderer && npm run dev",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd packages/main && npm run build",
    "build:preload": "cd packages/preload && npm run build",
    "build:renderer": "cd packages/renderer && npm run build",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint packages/*/src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.15",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.4.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "electron-store": "^8.2.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "build": {
    "appId": "com.videocompressor.app",
    "productName": "Video Compressor",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "packages/main/dist/**/*",
      "packages/preload/dist/**/*",
      "packages/renderer/dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer",
        "to": "ffmpeg-installer",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/@ffprobe-installer", 
        "to": "ffprobe-installer",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}